---
interface Props {
  position: string;
  company: string;
  responsabilities: string[];
  dates: string;
}

const { position, company, responsabilities, dates } = Astro.props;
---

<div
  class="relative mx-12 pb-8 grid before:absolute before:left-[-35px] before:block before:h-full before:border-l-2 before:border-black/20 dark:before:border-white/15 before:content-[''] md:grid-cols-5 md:gap-10 md:space-x-4]">
  <div class="relative pb-4 md:col-span-2">
    <div class="sticky top-0">
      <span class="text-yellow-400 -left-[42px] absolute rounded-full text-5xl"
        >&bull;</span
      >

      <h3 class="text-xl font-bold text-yellow-400">{position}</h3>
      <h4 class="font-semibold text-xl text-gray-600 dark:text-white">
        {company}
      </h4>
      <time class="p-0 m-0 text-sm text-gray-600/80 dark:text-white/80">
        {dates}
      </time>
    </div>
  </div>
  <div
    class="relative flex gap-2 pb-4 text-gray-600 dark:text-gray-300 md:col-span-3">
    {responsabilities}
  </div>
</div>
