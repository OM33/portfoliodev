---
import Angular from "../icons/Angular.astro";
import Bootstrap from "../icons/Bootstrap.astro";
import Github from "../icons/Github.astro";
import Html from "../icons/Html.astro";
import Javascript from "../icons/Javascript.astro";
import Link from "../icons/Link.astro";
import MaterialUi from "../icons/MaterialUi.astro";
import React from "../icons/React.astro";
import Tailwind from "../icons/Tailwind.astro";
import tailwindcss from "@tailwindcss/vite";
const TAGS = {
  ANGULAR: {
    name: "Angular",
    class: "size-10",
    icon: Angular,
  },
  BOOTSTRAP: {
    name: "Bootstrap",
    class: "size-10",
    icon: Bootstrap,
  },
  HTML: {
    name: "Html",
    class: "size-10",
    icon: Html,
  },
  JAVASCRIPT: {
    name: "Javascript",
    class: "size-10",
    icon: Javascript,
  },
  MATERIALUI: {
    name: "MaterialUi",
    class: "size-10",
    icon: MaterialUi,
  },
  REACT: {
    name: "React",
    class: "size-10",
    icon: React,
  },
  TAILWIND: {
    name: "Tailwind CSS",
    class: "size-10",
    icon: Tailwind,
  },
};

const tagsArray = Object.values(TAGS);

const PROJECTS = [
  {
    image: "/todo-app.webp",
    tags: [TAGS.REACT, TAGS.MATERIALUI],
    name: "Simple To Do List in React",
    description:
      "Built a simple and interactive task management app using React.js, enhancing productivity and time management.",
    link: "https://todo-app-om33.netlify.app/",
    github: "https://github.com/OM33/to-do-app",
  },
  {
    image: "/personal-converter.webp",
    tags: [TAGS.HTML, TAGS.JAVASCRIPT, TAGS.BOOTSTRAP],
    name: "Personal Currency Converter",
    description:
      "This is a simple app made with HTML, CSS and JS, where You can consult the price of Bitcoin, Argentinian peso and the Venezuelan currency, Bolivar. You also can convert any currency among USD, ARS, VES and BTC.",
    link: "https://om33.github.io/Conversor-personalizado/",
    github: "https://github.com/OM33/Conversor-personalizado",
  },
  {
    image: "/react-pixabay.webp",
    tags: [TAGS.REACT, TAGS.TAILWIND],
    name: "React and Tailwind Image Gallery",
    description:
      "A simple image gallery developed with react and tailwindCSS using a Pixabay API.",
    link: "https://react-tailwind-pixabay-image-gallery.vercel.app/",
    github: "https://github.com/OM33/react-tailwind-pixabay-image-gallery",
  },
  {
    image: "/angular-webscore.webp",
    tags: [TAGS.ANGULAR, TAGS.BOOTSTRAP],
    name: "Angular Webs Counter",
    description:
      "Angular web project where you can add web pages and score them.",
    link: "https://fazt-app.vercel.app/",
    github: "https://github.com/OM33/portfoliodev",
  },
  {
    image: "/react-flashcards.webp",
    tags: [TAGS.REACT, TAGS.BOOTSTRAP],
    name: "React Flashcard Project",
    description:
      "Simple Flashcard React project where you can learn basic vocabulary (English - Spanish) of body parts.",
    link: "https://flashcard-project-react.netlify.app/",
    github: "https://github.com/OM33/flashcard-project",
  },
];
---

<div class="flex flex-col gap-y-16">
  {
    PROJECTS.map(({ image, name, description, tags, link, github }) => (
      <article class="flex flex-col space-x-0 space-y-8 group md:flex-row md:space-x-8 md:space-y-0">
        <div class="w-full md:w-1/2">
          <div class="relative flex flex-col items-center col-span-6 row-span-5 gap-8 transition duration-500 ease-in-out transform shadow-xl overflow-clip rounded-xl sm:rounded-xl md:group-hover:-translate-y-1 md:group-hover:shadow-2xl lg:border lg:border-gray-800 lg:hover:border-gray-700 lg:hover:bg-gray-800/50">
            <img
              alt="project screenshot mockup"
              class="object-cover object-top w-full h-56 transition duration-500 sm:h-full md:scale-110 md:group-hover:scale-105"
              loading="lazy"
              src={image}
            />
          </div>
        </div>

        <div class="w-full md:w-1/2 md:max-w-lg">
          <h3 class="text-2xl font-bold text-gray-800 dark:text-gray-100">
            {name}
          </h3>
          <div class="flex flex-wrap mt-2">
            <ul class="flex flex-row mb-2 gap-x-2">
              {tags.map((tag) => (
                <li>
                  <span class={`flex gap-x-2 text-xs py-1 px-2 `}>
                    <tag.icon class="size-4" />
                    {tag.name}
                  </span>
                </li>
              ))}
            </ul>

            <div class="mt-2 text-gray-700 dark:text-gray-400">
              {description}
            </div>
            <footer class="flex items-end justify-start mt-4 gap-x-4">
              {github && (
                <a
                  target="_blank"
                  href={github}
                  role="link"
                  class="inline-flex bg-gray-100 text-gray-800 border-gray-300 items-center justify-center gap-2 px-3 py-2 space-x-2 text-base transition dark:text-white dark:bg-gray-800 border dark:border-gray-600 focus-visible:ring-yellow-500/80 text-md hover:bg-gray-800 hover:border-gray-900 group max-w-fit rounded-xl hover:text-white focus:outline-none focus-visible:outline-none focus-visible:ring focus-visible:ring-white focus-visible:ring-offset-2 active:bg-black">
                  <Github class="size-6" />
                  Code
                </a>
              )}
              {link && (
                <a
                  target="_blank"
                  href={github}
                  role="link"
                  class="inline-flex bg-gray-100 text-gray-800 border-gray-300 items-center justify-center gap-2 px-3 py-2 space-x-2 text-base transition dark:text-white dark:bg-gray-800 border dark:border-gray-600 focus-visible:ring-yellow-500/80 text-md hover:bg-gray-800 hover:border-gray-900 group max-w-fit rounded-xl hover:text-white focus:outline-none focus-visible:outline-none focus-visible:ring focus-visible:ring-white focus-visible:ring-offset-2 active:bg-black">
                  <Link class="size-4" />
                  Preview
                </a>
              )}
            </footer>
          </div>
        </div>
      </article>
    ))
  }
</div>
